@model IEnumerable<VSLT_FastfoodTeam.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/adminlayout.cshtml";
}
<h2>List sản phẩm</h2>
<table border="1px">
    <tr>
        <th>Mã sản phẩm </th>
        <th>tên sản phẩm </th>
        <th>Đơn giá </th>
        <th>Size </th>
        <th>Hình ảnh </th>
        <th>Số lượng tồn </th>
        <th>Mã nhà cung cấp</th>
        <th>loại sản phẩm </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.MaSP</td>
    <td>@item.Tensp</td>
    <td>@item.Dongia</td>
    <td>@item.Size</td>
    <td><img src="@item.Hinhanh" style="width:100px;height:200px;" /></td>
    <td>@item.Soluongton</td>
    <td>@item.MaNCC</td>
    <td>@item.LoaiSP.TenLoai</td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
        @Html.ActionLink("Detail", "Detail", new { id = item.MaSP }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
    </td>
</tr>
    }
</table>
@Html.ActionLink("Create", "Create", "Food")

