            <div class="col-md-9 product1">
                <div class=" bottom-product" style="margin-top:5%">
                    <table class="table">
                        <tr>
                            <th>Tên Sản Phẩm </th>
                            <th>Hình Ảnh</th>
                            <th>Đơn Giá</th>
                            <th>Số Lượng</th>
                            <th>Thành Tiền</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.TenSP) </td>
                                <td> <img src="@item.HinhAnh" width="180" /></td>
                                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @id = item.MaSP }))
                                {
                                    <td>@string.Format("{0:0,0}", item.DonGia) VNĐ </td>
                                    <td> <input type="number" min="1" name="txtsl" value="@item.SoLuong" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.thanhtien)</td>
                                    <td>
                                        <a href="@Url.Action("Detail", "Sach", new {id = item.MaSP})"> Chi tiết</a>
                                        | @Html.ActionLink("Xóa", "XoaGioHang", new { @id = item.MaSP })
                                    </td>
                                    <td> <input type="submit" value="Cập Nhật" class="btn btn-success" /></td>
                                }
                            </tr>

                        }
                        <tr style="font-weight: bold; text-align:left ; color: red">
                            <td colspan="2">Loại Món: @ViewBag.Tongsoluongsanpham</td>
                            <td colspan="2">Số Lượng Món Ăn: @ViewBag.Tongsoluong</td>
                            <td colspan="4">Tổng Tiền: @String.Format("{0:0,0}", @ViewBag.Tongtien) VNĐ </td>
                        </tr>

                        <tr style="font-weight: bold; color: blue; text-align:right">
                            <td colspan="5">
                                @Html.ActionLink("Xóa bỏ hàng", "XoaTatCaGioHang")
                            </td>
                        </tr>
                        <tr style="font-weight: bold; color: yellow; text-align:right">
                            <td colspan="6">
                                @Html.ActionLink("Trở về giỏ hàng", "GioHang", "GioHang")
                            </td>
                        </tr>
                    </table>

                    @using VSLT_FastfoodTeam.Models
                    <h2 Style="text-align: center ">Thông Tin Đặt Hàng</h2>
                    @{
                        KhachHang kh = (KhachHang)Session["KhachHang"];
                    }
                    <table align="center">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <tr style="height: 40px">
                                <td>Họ và tên khách hàng:</td>
                                <td style="font-weight :bold">@kh.TenKH</td>

                            </tr>
                            <tr style="height: 40px">
                                <td>Số điện thoại: </td>
                                <td style="font-weight :bold">@kh.SDT</td>

                            </tr>
                            <tr style="height: 40px">
                                <td>Địa chỉ: </td>
                                <td style="font-weight :bold">@kh.DiaChi</td>

                            </tr>
                            <tr style="height: 40px">
                                <td>Email: </td>
                                <td style="font-weight :bold">@kh.TaiKhoan.Email</td>

                            </tr>
                            <tr style="height: 40px">
                                <td>Ngày Đặt:</td>
                                <td style="font-weight :bold">@DateTime.Now.ToShortDateString()</td>

                            </tr>
                            <tr style="height: 40px">
                                <td>Ngày Giao: </td>
                                <td style="font-weight :bold">
                                    <input type="date" name="NgayGiao" />
                                </td>
                            </tr>
                            <tr style="height: 40px">
                                <td style="font-weight :bold">
                                    <input type="submit" value="Xác Nhận" class="btn btn-success" onclick="SendEmail() "/>
                                </td>
                            </tr>
                        }
                    </table>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var SendEmail = function () {
            $.ajax({
                type: "Post",
                url: "/GioHang/SendMailToUser",
                success: function (data) {
                    if (data == true)
                        alert("Gữi Email Thành công!!!!")
                    else {
                        alert("Đã xảy ra lỗi vui lòng kiểm tra lại!!!");
                    }
                }
            })
        }
    </script>
